{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "lib",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "cmao-ui": [
                "src/index.ts"
            ]
        }
    },
    "include": [
        "src",
        "typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "esm",
        "dist",
        "typings",
        "**/__test__",
        "test",
        "tests"
    ]
}